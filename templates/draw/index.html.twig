{% extends 'base.html.twig' %}

{% block title %}Draw index{% endblock %}

{% block body %}
    <h1>Draw index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for draw in draws %}
            <tr>
                <td>{{ draw.id }}</td>
                <td>
                    <a href="{{ path('app_draw_show', {'id': draw.id}) }}">show</a>
                    <a href="{{ path('app_draw_edit', {'id': draw.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_draw_new') }}">Create new</a>
{% endblock %}
